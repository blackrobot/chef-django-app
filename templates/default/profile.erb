# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# Added by Chef
<% if @rsa_key -%>
# Github deploy key
export GIT_SSH='<%= @git_wrapper_path %>'
<% end -%>

# Virtual env
export WORKON_HOME='<%= @envs_dir %>'
source '<%= @venv_wrapper_path %>'
